<!DOCTYPE html>
<html>
  <head>
    <!-- handlebars entry-template -->
    <script id="entry-template" type="text/x-handlebars-template">
      <div class="entry">
        <h1>{{title}}</h1>
        <div class="body">
          {{description}}
        </div>
      </div>
    </script>

  </head>
  <body>
    <main>
    <header>
      <%- include('./layout/header.ejs') %>

    </header>
      <section id="tasks" class="task-view container">
        <ul>
        <% taskArray.forEach(task => { %>
          <li><%= task.title %></li>
          <li><%= task.description %></li>
          <li><%= task.status %></li>
          <li class="task-detail"><a href='/tasks/<%= task.id %>'>more details</a></li>
          
        <% }) %>
        </ul>
      </section>
    </main>

    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.2.1.js"></script>

    <!-- handlebars -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js"></script>

    <!-- frontend js -->
    <script src="./app.js" type="text/javascript"></script>
  </body>
</html>
